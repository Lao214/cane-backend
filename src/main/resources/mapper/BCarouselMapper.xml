<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.integratedHub.dao.BCarouselMapper">

    <resultMap id="CarouselMap" type="com.example.integratedHub.entity.BCarousel" autoMapping="true"></resultMap>

    <!--条件分页查询-->
    <select id="selectPage" resultMap="CarouselMap">
        SELECT *
        FROM b_carousel
        <where>
            <if test="vo.keyword != null and vo.keyword != ''">
                and (contact_text like CONCAT('%',#{vo.keyword},'%')
                or  contact_title like CONCAT('%',#{vo.keyword},'%'))
            </if>
            <if test="vo.type != null and vo.type != ''">
                and contact_type = #{vo.type}
            </if>
        </where>
        order by id desc
    </select>

</mapper>
