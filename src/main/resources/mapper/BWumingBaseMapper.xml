<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.integratedHub.dao.BWumingBaseMapper">

    <resultMap id="baseMap" type="com.example.integratedHub.entity.BWumingBase" autoMapping="true">
        <id column="id" property="id"/>
        <result column="base_name" property="baseName"/>
        <result column="variety_name" property="varietyName"/>
    </resultMap>

    <select id="selectPage" resultType="com.example.integratedHub.entity.BWumingBase">
        select *
        from b_wuming_base
        <where>
            1 = 1
            <if test="vo.varietyName != null and vo.varietyName != ''">
                and (variety_name like CONCAT('%',#{vo.varietyName},'%'))
            </if>
        </where>
        order by id desc
    </select>

</mapper>
